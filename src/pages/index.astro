---
import Navbar from "../components/Navbar.astro";
import HeroSection from "../components/HeroSection.astro";
import Botox from "../components/Botox.astro";
import Ablauf from "../components/Ablauf.astro";
import PostTreatment from "../components/PostTreatment.astro";
import Prices from "../components/Prices.astro";
import FaqSection from "../components/FaqSection.astro";
import Google from "../components/Google.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/icon.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href="https://drscheffbuch.ch/" />
    <meta name="robots" content="index,follow" />
    <title>Dr. Scheffbuch Ästhetische Medizin - St. Gallen</title>
    <meta
      content="Dr. Scheffbuch Ästhetische Medizin in St. Gallen. Professionelle Botulinumtoxin-Behandlungen und ästhetische Medizin für natürliche Ergebnisse."
      name="description"
    />
    <meta content="Dr. Scheffbuch Ästhetische Medizin" property="og:title" />
    <meta
      content="Dr. Scheffbuch Ästhetische Medizin in St. Gallen. Professionelle Botulinumtoxin-Behandlungen und ästhetische Medizin für natürliche Ergebnisse."
      property="og:description"
    />
    <meta content="https://drscheffbuch.ch/icon.webp" property="og:image" />
    <meta content="https://drscheffbuch.ch/" property="og:url" />
    <meta content="de_CH" property="og:locale" />
    <meta
      content="Dr. Scheffbuch Ästhetische Medizin"
      property="twitter:title"
    />
    <meta
      content="Dr. Scheffbuch Ästhetische Medizin in St. Gallen. Professionelle Botulinumtoxin-Behandlungen und ästhetische Medizin für natürliche Ergebnisse."
      property="twitter:description"
    />
    <meta
      content="https://drscheffbuch.ch/icon.webp"
      property="twitter:image"
    />
    <meta content="https://drscheffbuch.ch/" property="twitter:url" />
    <meta property="og:type" content="website" />
    <meta content="summary_large_image" name="twitter:card" />

    <link
      rel="preload"
      href="/main.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link href="/main.css" rel="stylesheet" type="text/css" />
    </noscript>
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/outfit-v15-latin-regular.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/outfit-v15-latin-600.woff2"
      crossorigin
    />
    <style>
      @font-face {
        font-family: "Outfit";
        src:
          url("/outfit-v15-latin-regular.woff2") format("woff2"),
          url("/outfit-v15-latin-regular.ttf") format("truetype");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: "Outfit";
        src:
          url("/outfit-v15-latin-600.woff2") format("woff2"),
          url("/outfit-v15-latin-600.ttf") format("truetype");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
      }

      /* Default font for the whole document (everything inherits from this) */
      html,
      body {
        font-family:
          Outfit,
          system-ui,
          -apple-system,
          "Segoe UI",
          Roboto,
          Arial,
          sans-serif;
      }
    </style>
    <script type="text/javascript">
      !(function (o, c) {
        var n = c.documentElement,
          t = " w-mod-";
        (n.className += t + "js"),
          ("ontouchstart" in o ||
            (o.DocumentTouch && c instanceof DocumentTouch)) &&
            (n.className += t + "touch");
      })(window, document);
    </script>
    <link href="/icon.webp" rel="shortcut icon" type="image/x-icon" />
    <link href="/icon.webp" rel="apple-touch-icon" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Physician",
        "name": "Dr. Nicolas Scheffbuch",
        "description": "Ästhetische Medizin in St. Gallen: Botulinumtoxin-Behandlungen – persönlich, präzise, natürlich.",
        "image": "https://drscheffbuch.ch/icon.webp",
        "url": "https://drscheffbuch.ch/",
        "telephone": "+41712222022",
        "priceRange": "$$",
        "currenciesAccepted": "CHF",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Neugasse 26",
          "addressLocality": "St. Gallen",
          "postalCode": "9000",
          "addressCountry": "CH"
        },
        "areaServed": {
          "@type": "City",
          "name": "St. Gallen"
        },
        "sameAs": ["https://instagram.com/drscheffbuchaesthetics"],
        "hasMap": "https://maps.app.goo.gl/6CNNbLL4ht4iwiNc9",
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": "Wednesday",
            "opens": "17:00",
            "closes": "19:00"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": "Saturday",
            "opens": "10:00",
            "closes": "15:00"
          }
        ]
      }
    </script>
  </head>
  <body>
    <Navbar />
    <HeroSection />
    <Botox />
    <Ablauf />
    <PostTreatment />
    <Prices />
    <FaqSection />
    <Google />
    <Contact />
    <Footer />
    <script
      src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=68711d07d3dab3bc36b1b545"
      type="text/javascript"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"></script>
  </body>

  <style is:global>
    :root {
      --color--white: white;
      --font-family--body: Outfit, sans-serif;
      --color--body: var(--color--gray-1);
      --font-family--heading: Outfit, Arial, sans-serif;
      --color--heading: var(--color--primary-1);
      --color--primary-1: #091331;
      --border-radius--lg: 20px;
      --color--secondary-3: #e5ecf9;
      --color--gray-2: #e7e8eb;
      --border-radius--form-input: 10px;
      --color--primary-2: #2b6cf5;
      --color--gray-1: #4c4e51;
      --border-radius--button: 100px;
      --color--black: #1d1f17;
      --color--transparent: #0000;
      --border-radius--rounded: 500px;
      --color--secondary-2: #dce2f3;
      --color--secondary-1: #d4e1f9;
      --border-radius--md: 15px;
    }

    section:not(:first-of-type) {
      margin-top: 200px;

      @media screen and (min-width: 768px) and (max-width: 1024px) {
        margin-top: 150px;
      }

      @media screen and (max-width: 768px) {
        margin-top: 100px;
      }
    }

    h1 {
      text-align: center;
      margin-bottom: 3rem;
    }

    section > div {
      max-width: 1400px;
      padding: 0 2rem;
      margin: auto;
    }

    .centered {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    body {
      font-size: 18px;
      line-height: 1.5em;
      color: black;
      margin: 0;
    }
  </style>
</html>
