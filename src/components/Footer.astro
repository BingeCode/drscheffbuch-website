---
import beautyCosmeticsImage from "../assets/beauty_cosmetics.png";
import dermaSRImage from "../assets/dermasr.png";
import { Image } from "astro:assets";
---

<footer>
  <div>
    <div class="flex">
      <div class="card">
        <h1>Adresse St. Gallen</h1>
        <div>
          Beauty Cosmetics GmbH<br />
          Neugasse 26<br />
          9000 St. Gallen
        </div>
        <a href="tel:+41712222022">Telefon: +41 71 222 20 22</a>
        <a href="https://wa.me/41792208077" target="_blank" rel="noopener"
          >WhatsApp: +41 79 220 80 77</a
        >
      </div>

      <div class="card">
        <h1>Kontakt Dr. Scheffbuch</h1>
        Email
        <a href="mailto:praxis@drscheffbuch.ch">praxis@drscheffbuch.ch</a>
        Instagram
        <a
          href="https://instagram.com/drscheffbuchaesthetics"
          target="_blank"
          rel="noopener">@drscheffbuchaesthetics</a
        >
      </div>
      <div class="card">
        <h1>Adresse Mels</h1>
        <div>
          House of Beauty<br />
          Bahnhofstrasse 23 <br />
          8887 Mels
        </div>
        <a href="tel:+41817233979">Telefon: +41 81 723 39 79</a>
      </div>
    </div>

    <div class="pages">
      <a href="/">Startseite</a>
      <a href="/impressum" class="link">Impressum</a>
      <a href="/datenschutz" class="link">Datenschutz</a>
    </div>

    <div class="logos">
      <a href="https://www.mybc.ch/" target="_blank" rel="noopener">
        <Image
          src={beautyCosmeticsImage}
          alt="Beauty Cosmetics Logo"
          sizes="100px"
        />
      </a>
      <Image src={dermaSRImage} alt="DermaSR Logo" sizes="100px" />
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: #fff;
    background-image: linear-gradient(
      40deg,
      var(--color--grey) 11%,
      #e5ecf91a 50%,
      var(--color--grey) 87%
    );
    padding: 60px 0;
  }

  img {
    max-width: 100px;
  }

  a {
    display: block;
    color: #4c4e51;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.5em;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
  }
  .logos {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin: 2.5rem 0 0.5rem;
  }

  .pages {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .flex {
    display: flex;
    justify-content: space-around;
    gap: 3.25rem;
    margin-bottom: 50px;
  }

  @media (max-width: 1024px) {
    .flex {
      flex-direction: column;
      align-items: center;
    }
  }
  .card {
    width: 250px;
    background: #fff;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    padding: 1.25rem 1.25rem 1.1rem;
    border-radius: 16px;
    border: 1px solid rgba(15, 23, 42, 0.08);
    box-shadow:
      0 1px 2px rgba(15, 23, 42, 0.06),
      0 10px 24px rgba(15, 23, 42, 0.1);
  }

  h1 {
    font-size: 1.3rem;
    color: var(--color--primary);
    margin: 0 0 0.25rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(15, 23, 42, 0.08);
  }
</style>
