---
// Contact section for Dr. Scheffbuch Aesthetics
const mapUrl = "https://maps.app.goo.gl/6CNNbLL4ht4iwiNc9";
---

<section class="contact-section container" id="kontakt">
  <a
    href={mapUrl}
    target="_blank"
    rel="noopener"
    class="contact-map-embed-link"
    aria-label="Google Maps">
    <iframe
      class="contact-map-iframe"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2761.726964893019!2d9.37222231558313!3d47.4244819791757!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479b1e3e2e2e2e2e%3A0x2e2e2e2e2e2e2e2e!2sNeugasse%2026%2C%209000%20St.%20Gallen%2C%20Switzerland!5e0!3m2!1sen!2sch!4v1710000000000!5m2!1sen!2sch"
      width="100%"
      height="400"
      style="border:0; border-radius: 1.5rem;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="Google Maps - Beauty Cosmetics GmbH St. Gallen"></iframe>
  </a>
  <style>
    .contact-section {
      width: 100%;
      margin: 5rem auto;
      border-radius: 1.5rem;
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
      padding: 0;
      position: relative;
      color: #fff;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      gap: 0;
      background: none;
    }
    .contact-map-embed-link {
      display: block;
      width: 100%;
      height: 100%;
      border-radius: 1.5rem;
      overflow: hidden;
    }
    .contact-map-iframe {
      min-height: 320px;
      height: 400px;
      border: none;
      border-radius: 1.5rem;
      display: block;
    }
    @media (max-width: 900px) {
      .contact-map-iframe {
        max-width: 100vw;
      }
    }
    @media (max-width: 600px) {
      .contact-section {
        border-radius: 1rem;
      }
      .contact-map-embed-link,
      .contact-map-iframe {
        min-height: 200px;
        border-radius: 1rem;
      }
    }
  </style>
</section>
