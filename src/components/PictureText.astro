---
import { Image } from "astro:assets";
import botoxImage from "../assets/spritze.webp";

const { image, alt } = Astro.props;
---

<section>
  <div>
    <div class="flex">
      <div class="image-wrapper">
        <Image src={image} alt={alt} sizes="(max-width: 768px) 300px, 400px" />
      </div>
      <div class="content">
        <slot name="content" />
      </div>
    </div>
  </div>
</section>

<style>
  .flex {
    display: flex;
    justify-content: center;
    gap: 4rem;
  }

  @media (max-width: 768px) {
    .flex {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }
  }

  .image-wrapper {
    max-width: 400px;
  }

  img {
    border-radius: 1rem;
    height: 100%;
  }

  .content {
    max-width: 600px;
  }
</style>

<style is:global>
  li {
    padding-left: 1.5rem;
    margin-bottom: 10px;

    &::marker {
      color: var(--color--primary);
    }
  }
</style>
